@model mvc_razor.Models.Paginacao<Material>

@{
    ViewData["Title"] = "Lista de materiais";
}

<h1>Lista de materiais</h1>
<p>
    <a asp-action="Create" class="btn btn-primary">Novo</a>
</p>

<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <table class="table table-striped table-advance table-hover">
                <tbody>
                    <tr>
                        <th><i class="icon_profile"></i> Id</th>
                        <th><i class="icon_calendar"></i> Nome</th>
                        <th><i class="icon_mail_alt"></i> Aluno</th>
                        <th><i class="icon_cogs"></i> Ações</th>
                    </tr>
                    @foreach (var material in Model.Results)
                    {
                        <tr>
                            <td>@material.Id</td>
                            <td>@material.Nome</td>
                            <td>@material.AlunoId</td>
                            <td>
                                <div class="btn-group">
                                    <a class="btn btn-success" asp-action="Details" asp-route-id="@material.Id"><i class="icon_check_alt2"></i></a>
                                    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@material.Id"><i class="icon_check_alt2"></i></a>
                                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@material.Id"><i class="icon_check_alt2"></i></a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

            <hr />

            @if(Model.CurrentPage > 1)
            {
                <a href="/Administradores?pagina=@(Model.CurrentPage - 1)">Anterior</a>
            }

            @if(Model.PageCount > Model.CurrentPage && Model.PageSize == Model.Results.Count)
            {
                <a href="/Administradores?pagina=@(Model.CurrentPage + 1)">Próxima</a>
            }
        </section>
    </div>
</div>